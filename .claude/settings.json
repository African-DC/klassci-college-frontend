{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(npm run *)",
      "Bash(npx tsc *)",
      "Bash(npx shadcn *)",
      "Bash(ls *)"
    ],
    "deny": [
      "Bash(git push --force *)",
      "Bash(git push origin main)",
      "Bash(git push origin staging)",
      "Bash(rm -rf *)",
      "Read(.env.local)",
      "Read(.env*)"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(npm install *)"
    ]
  }
}
